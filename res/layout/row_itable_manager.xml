<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ngoc_menu_button_notradius"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/edtItabManagerNameItable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Ten ban"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="35"
            android:background="@drawable/ngoc_menu_button_notradius"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edtItabManagerX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/edtItabManagerY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="10"
            android:background="@drawable/ngoc_menu_button_notradius"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imbItabManagerLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:src="@android:drawable/ic_menu_mylocation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="10"
            android:background="@drawable/ngoc_menu_button_notradius"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- <TextView
                android:id="@+id/tvItabManagerStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="stattus"
                android:textColor="#FFF" /> -->

            <ImageView
                android:id="@+id/imgItabManagerStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/radiobutton_off_background"
                 />
<!-- android:src="@drawable/radiobutton_off_background" -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="15"
            android:background="@drawable/ngoc_menu_button_notradius"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imbItabManagerDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/item_selector"
                android:src="@drawable/deleteicon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>