<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_demo3"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".GridViewMapFloor1" >

    <LinearLayout
        android:layout_width="989dp"
        android:layout_height="99dp"
        android:layout_gravity="center"
        android:background="@drawable/bannerpos"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/btnActivityBeveragesFood"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnActivityBeveragesWine"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnActivityBeveragesBeverages"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnActivityBeveragesOk"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridActivityBeveragesSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/bg_demo2"
        android:columnWidth="90.0dip"
        android:drawSelectorOnTop="false"
        android:gravity="center"
        android:horizontalSpacing="2.0dip"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2.0dip" />

    <LinearLayout
        android:id="@+id/gallery_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="42"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_arrow_imageview"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Gallery
            android:id="@+id/galleryActivityBeveragesItem"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:spacing="30dip" />

        <ImageView
            android:id="@+id/right_arrow_imageview"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />
    </LinearLayout>

</LinearLayout>