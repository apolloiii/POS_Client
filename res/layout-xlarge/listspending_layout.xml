<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ngoc_header_button"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/tablecost"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card" />

              <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2.5"
                    android:text="@string/code"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtcodeList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="15sp" />
                 <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/button_cost_bo"
                    android:src="@drawable/addicon"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/caculator" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2.5"
                    android:text="@string/cost"
                    android:textSize="15sp"
                   />

                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:inputType="number"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/texticon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2.5"
                    android:text="@string/typecost"
                    android:textSize="15sp"
                     />

                <Spinner
                    android:id="@+id/spnTypecosts"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                     android:background="@drawable/button_cost_bo"
                    android:src="@drawable/addicon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/texticon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/groupcost"
                    android:textSize="15sp"
                  />

                <Spinner
                    android:id="@+id/spnGroupWC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                     android:background="@drawable/button_cost_bo"
                    android:src="@drawable/addicon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center|left|top"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/textsearch" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/namecost"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/edtnameArise"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left|top"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/texticon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/description"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/edtNote"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:inputType="textMultiLine"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnAddListCost"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/button_cost_bo"
                android:textColor="#fff"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/addicon"
                android:textSize="15sp"
                android:text="@string/addnew" />

            <Button
                android:id="@+id/btnUpdateListCost"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:background="@drawable/button_cost_bo"
                android:textColor="#fff"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/updateicon"
                android:enabled="false"
                android:textSize="15sp"
                android:text="@string/update" />

            <Button
                android:id="@+id/btnDeleteListCost"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:layout_weight="1"
                android:background="@drawable/button_cost_bo"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/deleteicon2"
                 android:textSize="15sp"
                android:enabled="false"
                android:text="@string/delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="false"
                android:visibility="invisible" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/code"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/namecost"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/cost"
                android:textSize="15dp"
                android:visibility="gone"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/note"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/typecost"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/line2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/groupcost"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line2" />

        <ListView
            android:id="@+id/lisviewTableCost"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="@drawable/line3"
            android:dividerHeight="0.5dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>
