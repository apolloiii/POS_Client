<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_invoicedetail"
    android:gravity="center"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btnMap"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1.8"
        android:background="@drawable/head_tablemap"
        android:drawableLeft="@drawable/icon_map"
        android:minWidth="100sp"
        android:onClick="menuButtonClick"
        android:paddingLeft="10.0dip"
         android:paddingRight="10.0dip"
        android:textSize="10sp"
        android:text="@string/header_pos_TableMap"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#0856BE" />

    <Button
        android:id="@+id/btnInvoice"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="2"
        android:background="@drawable/head_waiter"
         android:drawableLeft="@drawable/icon_waiter"
        android:minWidth="100sp"
        android:onClick="menuButtonClick"
        android:padding="10.0dip"
        android:textSize="10sp"
        android:text="@string/header_pos_Invoice"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#0856BE" />

    <Button
        android:id="@+id/btnKitchen"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="2"
        android:background="@drawable/head_kitchen"
         android:drawableLeft="@drawable/icon_kitchen"
        android:minWidth="100sp"
        android:onClick="menuButtonClick"
        android:padding="10.0dip"
        android:textSize="10sp"
        android:text="@string/header_pos_Kitchen"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#0856BE" />

    <Button
        android:id="@+id/btnPayment"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="2"
        android:background="@drawable/head_tablemap"
         android:drawableLeft="@drawable/icon_cashies"
        android:minWidth="100sp"
        android:onClick="menuButtonClick"
        android:paddingLeft="10.0dip"
         android:paddingRight="10.0dip"
        android:textSize="10sp"
        android:text="@string/header_pos_Payment"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#0856BE" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/bg_invoicedetail" >

        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/head_setting"
            android:src="@drawable/selector_headericon"
            android:minWidth="100sp"
            android:layout_weight="1.5"
            android:onClick="menuButtonClick"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0856BE" />

        <ImageButton
            android:id="@+id/btnLogin_Out"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/head_login_out"
             android:src="@drawable/selector_logout_icon"
            android:minWidth="100sp"
            android:onClick="menuButtonClick"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>