<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6295CC"
    android:orientation="vertical"
    android:weightSum="20" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:background="#6295CC"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Index"
                android:textColor="#FFFFFF"
                android:textSize="10.0dip"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nameitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="10.0dip"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/note_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:textColor="#FFFFFF"
                android:textSize="10.0dip"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="16"
        android:divider="#105CC0"
        android:dividerHeight="0.5dp"
        android:drawSelectorOnTop="false" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="3"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_Destroy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_click"
            android:drawableTop="@drawable/selector_footer_destroy"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_click"
            android:drawableTop="@drawable/selector_footer_split"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_Coupling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_click"
            android:drawableTop="@drawable/selector_footer_join"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/addNewInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="15.0dip"
            android:textSize="10sp"
            android:background="@drawable/button_click"
            android:drawableTop="@drawable/selector_footer_add"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_click"
            android:drawableTop="@drawable/selector_footer_caculator"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnFreeTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/button_click"
            android:drawableTop="@drawable/selector_footer_free"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>