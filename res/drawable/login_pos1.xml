<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233445"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tableRow1"
            android:layout_below="@+id/tableRow1" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/key2" />

            <EditText
                android:id="@+id/loginpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:ems="12" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/person" />

            <EditText
                android:id="@+id/loginusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:ems="12" />

            <requestFocus />
        </TableRow>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Check_SaveUserPass"
            android:layout_below="@+id/Check_SaveUserPass"
            android:background="@drawable/shape_signin"
            android:ems="10"
            android:text="Sign in"
            android:textColor="#FFF" />

        <CheckBox
            android:id="@+id/Check_SaveUserPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TableRow01"
            android:layout_centerHorizontal="true"
            android:text="Remember me"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#8F6048" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/TableRow01"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="23dp"
            android:text="Copyright 3i Company - POS Version 1.0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#8F6048" />
    </RelativeLayout>

</LinearLayout>