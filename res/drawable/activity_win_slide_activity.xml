<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_demo1"
    android:orientation="vertical"
    tools:context=".GridViewMapFloor1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnWineSlideActivityFood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0095A7"
            android:drawableLeft="@drawable/menu_food"
            android:paddingLeft="15dp"
            android:text="Food"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWineSlideActivityWine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E48C0D"
            android:drawableLeft="@drawable/menu_wine"
            android:text="Wine"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWineSlideActivityBeverages"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#96B123"
            android:drawableLeft="@drawable/menu_veget"
            android:text="Vegettable"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnWineSlideActivityOk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0856BE"
                android:src="@drawable/selector_menuok3" />

            <ImageButton
                android:id="@+id/btnWineSlideActivityClose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9F00A6"
                android:src="@drawable/selector_footerdestroy1" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/gridWineSliActivityItemSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#6295CC"
        android:gravity="center" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/gallery_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:background="#0856BE"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_arrow_imageview"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Gallery
            android:id="@+id/galleryCateWineItemSliActivityItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="30dip" />

        <ImageView
            android:id="@+id/right_arrow_imageview"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />
    </LinearLayout>

</LinearLayout>