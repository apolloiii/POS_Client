<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:background="@drawable/ngoc_menu_button_notradius" >

        <GridView
            android:id="@+id/gridViewTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:numColumns="3" >
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnDiaSplitChooseTableOK"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bo"
            android:ems="6"
            android:src="@drawable/menu_ok" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/ngoc_menu_button_notradius" />

        <ImageButton
            android:id="@+id/btnDiaSplitChooseTableCancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bo"
            android:src="@drawable/menu_cancel1" />
    </LinearLayout>

</LinearLayout>